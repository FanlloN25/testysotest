{
  "name": "vibecord-secure-auth-system",
  "version": "1.0.0",
  "description": "Продвинутая система аутентификации и управления аккаунтами с Firebase",
  "main": "account-api.js",
  "scripts": {
    "start": "node account-api.js",
    "dev": "nodemon account-api.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security-audit": "npm audit",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "setup": "npm install && npm run migrate && npm run seed"
  },
  "keywords": [
    "authentication",
    "firebase",
    "security",
    "2fa",
    "jwt",
    "account-management",
    "express",
    "api",
    "nodejs"
  ],
  "author": "VibeCord Security Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^11.10.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.49.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-jest": "^27.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/vibecord-secure-auth.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/vibecord-secure-auth/issues"
  },
  "homepage": "https://github.com/your-org/vibecord-secure-auth#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "node/no-unsupported-features/es-syntax": "off"
    }
  }
}